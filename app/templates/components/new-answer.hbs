{{#if addNewAnswer}}
  <h1>Add Your Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="answer">Answer</label>
          {{input value=answer id="answer"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>
        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-success"{{action 'answerFormShow'}}>New Answer</button>
{{/if}}
