{{#if updateQuestionForm}}
  <h4>Update {{question.question}} by {{question.author}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="question">question</label>
          {{input value=editQuestion id="question" placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>
        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
