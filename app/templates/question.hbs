<h2 class="text-center">More information about {{model.question}}'s by {{model.author}}</h2>

{{show-question question=model update="update"}}

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <h2 class="text-center">Answers to the question</h2>
      <ul>
        {{#each model.answers as |answer|}}
          <li>{{answer.answer}} by {{answer.author}}</li>
        {{/each}}
      </ul>
      {{new-answer saveAnswer="saveAnswer" question=model}}
    </div>
  </div>
</div>
